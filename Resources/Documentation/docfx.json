{
  "metadata": [
    {
      "src": [
        {
		  "cwd": "../..",
			"files": [
				"DotNet/DotNet.csproj",
				"DotNet.Shared/DotNet.Shared.csproj",
				"DotNet.NLog/DotNet.NLog.csproj",
				"DotNet.Jose/DotNet.Jose.csproj",
				"Uwp/Uwp.csproj"
			]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default"
    ]
  }
}