{
  "metadata": [
    {
      "src": [
        {
          "cwd": "../..",
          "files": [
            "Toolkit/Toolkit.csproj",
            "Toolkit.NetFramework/Toolkit.NetFramework.csproj",
            "Toolkit.NLog/Toolkit.NLog.csproj",
            "Toolkit.Jose/Toolkit.Jose.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "api/**.yml",
          "api/index.md"
        ]
      },
      {
        "files": [
          "articles/**.md",
          "articles/**/toc.yml",
          "toc.yml",
          "*.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "template": [
      "default"
    ]
  }
}